<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.thinkful.timeful.LoginActivity"
    tools:showIn="@layout/activity_login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/time_to_level_up_in_real_life"
        android:id="@+id/textView9"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:typeface="serif"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/welcome_to_timeful"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:typeface="serif"
        android:textStyle="italic" />
    
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/emailLogin"
        android:hint="@string/e_mail"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textView9"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordLogin"
        android:hint="@string/password"
        android:layout_below="@+id/emailLogin"
        android:layout_alignLeft="@+id/emailLogin"
        android:layout_alignStart="@+id/emailLogin"
        android:layout_marginTop="20dp" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/button3"
            android:onClick="loginButtonClicked"
            android:text="login"
            android:textColor="#FFFFFF"
            android:textSize="20sp"

            android:layout_width="110dp"
            android:layout_height="30dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:typeface="serif" />
        <android.support.v4.widget.Space
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/newLogin"
            android:text="@string/register_button"
            android:textColor="#FFFFFF"
            android:textSize="20sp"

            android:layout_width="110dp"
            android:layout_height="30dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:onClick="registerButtonClicked"
            android:typeface="serif" />
    </LinearLayout>
</LinearLayout>
